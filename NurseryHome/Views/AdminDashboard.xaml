<Window x:Class="NurseryHome.Views.AdminDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:vm="clr-namespace:NurseryHome.ViewModels"
        mc:Ignorable="d"
        Title="Admin Dashboard" Height="450" Width="600">

    <TabControl>
        <TabItem Header="Copii">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBox Width="100" Margin="5" Text="{Binding FullName}" />
                    <DatePicker Width="120" Margin="5" SelectedDate="{Binding DateOfBirth}" />
                    <TextBox Width="50" Margin="5" Text="{Binding GroupId}" />
                    <TextBox Width="50" Margin="5" Text="{Binding ParentId}" />
                    <Button Width="100" Content="Adaugă" Command="{Binding AddChildCommand}" />
                    <Button Width="100" Content="Editează" Command="{Binding EditChildCommand}" />
                    <Button Width="100" Content="Șterge" Command="{Binding DeleteChildCommand}" />
                </StackPanel>

                <DataGrid Grid.Row="1"
                      ItemsSource="{Binding Children}"
                      SelectedItem="{Binding SelectedChild}"
                      AutoGenerateColumns="True" />
            </Grid>
        </TabItem>
        <TabItem Header="Părinți">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBox Width="120" Margin="5" ToolTip="Nume complet" Text="{Binding ParentFullName}" />
                    <TextBox Width="100" Margin="5" ToolTip="Telefon" Text="{Binding ParentPhone}" />
                    <TextBox Width="150" Margin="5" ToolTip="Email" Text="{Binding ParentEmail}" />
                    <TextBox Width="150" Margin="5" ToolTip="Adresă" Text="{Binding ParentAddress}" />

                    <Button Width="80" Margin="5" Content="Adaugă" Command="{Binding AddParentCommand}" />
                    <Button Width="80" Margin="5" Content="Editează" Command="{Binding EditParentCommand}" />
                    <Button Width="80" Margin="5" Content="Șterge" Command="{Binding DeleteParentCommand}" />
                </StackPanel>

                <DataGrid Grid.Row="1"
                  ItemsSource="{Binding Parents}"
                  SelectedItem="{Binding SelectedParent}"
                  AutoGenerateColumns="True" />
            </Grid>
        </TabItem>

        <TabItem Header="Legături Părinte-Educator">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,10" VerticalAlignment="Top">
                    <StackPanel Margin="5">
                        <TextBlock Text="Selectează Părinte:" />
                        <ComboBox Width="150"
                                  ItemsSource="{Binding AllParents}"
                                  SelectedItem="{Binding SelectedParent}"
                                  DisplayMemberPath="FullName" />
                    </StackPanel>

                    <StackPanel Margin="5">
                        <TextBlock Text="Selectează Educator:" />
                        <ComboBox Width="150"
                                  ItemsSource="{Binding AllEducators}"
                                  SelectedItem="{Binding SelectedEducator}"
                                  DisplayMemberPath="FullName" />
                    </StackPanel>

                    <Button Width="140" Margin="5" VerticalAlignment="Bottom"
                            Content="Asociază Părinte-Educator"
                            Command="{Binding LinkParentEducatorCommand}" />
                </StackPanel>

                <DataGrid Grid.Row="1"
                          ItemsSource="{Binding ParentEducatorLinks}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="Auto"/>
                        <DataGridTextColumn Header="Părinte ID" Binding="{Binding ParentId}" Width="*"/>
                        <DataGridTextColumn Header="Educator ID" Binding="{Binding EducatorId}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </TabItem>

        <TabItem Header="Educatori">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBox Width="150" Margin="5" ToolTip="Nume complet" Text="{Binding EducatorFullName}" />
                    <TextBox Width="120" Margin="5" ToolTip="Telefon" Text="{Binding EducatorPhone}" />
                    <TextBox Width="150" Margin="5" ToolTip="Email" Text="{Binding EducatorEmail}" />
                    <TextBox Width="120" Margin="5" ToolTip="Parolă" Text="{Binding EducatorPassword}" />
                    <TextBox Width="180" Margin="5" ToolTip="Adresă" Text="{Binding EducatorAddress}" />

                    <Button Width="80" Margin="5" Content="Adaugă" Command="{Binding AddEducatorCommand}" />
                    <Button Width="80" Margin="5" Content="Editează" Command="{Binding EditEducatorCommand}" />
                    <Button Width="80" Margin="5" Content="Șterge" Command="{Binding DeleteEducatorCommand}" />
                </StackPanel>

                <DataGrid Grid.Row="1"
                  ItemsSource="{Binding AllEducators}"
                  SelectedItem="{Binding SelectedEducator}"
                  AutoGenerateColumns="True" />
            </Grid>
        </TabItem>

        <TabItem Header="Grupe">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBox Width="150" Margin="5"
                     ToolTip="Numele grupei"
                     Text="{Binding GroupName}" />

                    <ComboBox Width="180" Margin="5"
                      ItemsSource="{Binding AllEducators}"
                      DisplayMemberPath="FullName"
                      SelectedValuePath="Id"
                      SelectedValue="{Binding GroupEducatorId}"
                      ToolTip="Selectează educatorul" />

                    <Button Content="Adaugă" Width="80" Margin="5"
                    Command="{Binding AddGroupCommand}" />
                    <Button Content="Editează" Width="80" Margin="5"
                    Command="{Binding EditGroupCommand}" />
                    <Button Content="Șterge" Width="80" Margin="5"
                    Command="{Binding DeleteGroupCommand}" />
                </StackPanel>

                <DataGrid Grid.Row="1"
                  ItemsSource="{Binding Groups}"
                  SelectedItem="{Binding SelectedGroup}"
                  AutoGenerateColumns="True" />
            </Grid>
        </TabItem>

    </TabControl>

</Window>

