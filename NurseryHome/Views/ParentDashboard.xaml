<Window x:Class="NurseryHome.Views.ParentDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:NurseryHome.ViewModels"
        Title="Parent Dashboard" Height="500" Width="750">
    
    <Grid Margin="10">
        <TabControl>
            <!-- Plăți -->
            <TabItem Header="Plăți">
                <DataGrid ItemsSource="{Binding Payments}" AutoGenerateColumns="True" />
            </TabItem>

            <!-- Absențe -->
            <TabItem Header="Absențe">
                <DataGrid ItemsSource="{Binding Absences}" AutoGenerateColumns="True" />
            </TabItem>

            <!-- Anunțuri -->
            <TabItem Header="Anunțuri">
                <DataGrid ItemsSource="{Binding Announcements}" AutoGenerateColumns="True" />
            </TabItem>
        </TabControl>
    </Grid>
</Window>

